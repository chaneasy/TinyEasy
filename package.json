{
	"name": "tinyeasy",
	"private": true,
	"version": "0.0.0",
	"description": "TinyEasy Desktop App",
	"author": "TinyEasy",
	"type": "module",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
		"dev:vite": "vite",
		"dev:electron": "wait-on tcp:5173 && tsc -p tsconfig.electron.json && electron .",
		"build": "tsc -p tsconfig.electron.json && vite build",
		"pack": "npm run build && electron-builder --dir",
		"dist": "npm run build && electron-builder",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@tsconfig/svelte": "^5.0.6",
		"@types/node": "^24.10.7",
		"autoprefixer": "^10.4.23",
		"concurrently": "^9.2.1",
		"daisyui": "^5.5.14",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"postcss": "^8.5.6",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "~5.9.3",
		"vite": "^7.2.4",
		"wait-on": "^9.0.3"
	},
	"dependencies": {
		"@napi-rs/image": "^1.12.0",
		"electron-squirrel-startup": "^1.0.1",
		"execa": "^9.6.1",
		"flowbite": "^4.0.1",
		"flowbite-svelte": "^1.31.0",
		"flowbite-svelte-icons": "^3.1.0",
		"lucide-svelte": "^0.562.0",
		"mozjpeg": "^8.0.0",
		"oxipng-bin": "^1.0.0",
		"p-limit": "^7.2.0",
		"svelte-french-toast": "^1.2.0"
	},
	"build": {
		"appId": "com.tinyeasy.app",
		"productName": "TinyEasy",
		"directories": {
			"output": "release",
			"buildResources": "build"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"extraResources": [
			{
				"from": "build/icon.png",
				"to": "icon.png"
			}
		],
		"mac": {
			"icon": "build/icons/icon.icns",
			"identity": null,
			"hardenedRuntime": false,
			"gatekeeperAssess": false,
			"target": [
				"dmg",
				"zip"
			]
		},
		"win": {
			"icon": "build/icons/icon.ico",
			"target": [
				"nsis"
			]
		},
		"linux": {
			"icon": "build/icon.png",
			"target": [
				"AppImage"
			]
		}
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"mozjpeg",
			"oxipng-bin",
			"esbuild",
			"electron-winstaller"
		]
	}
}
